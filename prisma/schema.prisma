// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model samples {
  id String @id
  name String
}

model Customer {
  id String @id
  name String
  email String @unique
  phone String @unique
  wallet Wallet?

  @@map("customers")
}

model Product {
  id String @id
  name String
  price Int
  stock Int
  category String
  create_time DateTime

  @@map("products")
}

model Category {
  id Int @id @default(autoincrement())
  name String

  @@map("categories")
}

model Wallet {
  id String @id
  balance Int
  customer_id String @unique 
  customer Customer @relation(fields: [customer_id], references: [id])

  @@map("wallet")
}